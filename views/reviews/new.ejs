<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Add new reviews for <%= park.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/parks/<%= park._id%>/reviews" method="POST" class="form-horizontal">
                <div class="form-group">
                    <input class="form-control" type="text" name="review[text]" placeholder="text"/>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block"><i class="fa fa-plus" aria-hidden="true"></i> Submit</button>
                </div>
            </form>
         <a href="/parks">Go back</a>
        </div> 
    </div>
<% include ../partials/footer %>