<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Edit reviews</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/parks/<%= park_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="review[text]" value="<%= review.text%>"/>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block"><i class="fa fa-pencil" aria-hidden="true"></i> Submit</button>
                </div>
            </form>
         <a href="/parks">Go back</a>
        </div> 
    </div>

