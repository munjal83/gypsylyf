<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center"><i class="fa fa-pencil" aria-hidden="true"></i> Edit <%= park.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/parks/<%= park._id %>/?_method=PUT" method="POST" class="form-horizontal">
                <div class="form-group">
                    <input class="form-control" type="text" name="park[name]" value="<%= park.name%>"/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="park[price]" value="<%= park.price%>" min="1.0", step="0.01"/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="park[location]" id="location" value="<%= park.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="park[image]" value="<%= park.image%>" />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="park[description]" value="<%= park.description%>"/>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-large btn-block"><i class="fa fa-tree" aria-hidden="true"></i> Submit</button>
                </div>
            </form>
         <a href="/parks">Go back</a>
        </div> 
    </div>

<% include ../partials/footer %>